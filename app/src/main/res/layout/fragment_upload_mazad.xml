<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.upload_mazad.UploadMazadFragment">

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackColor"
        android:paddingBottom="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/description_font"
                android:gravity="center"
                android:text="اضافه اعلان"
                android:textColor="@color/dark_white"
                android:textSize="28sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/dark_white" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/description_font"
                android:gravity="center"
                android:text="اضافه صورة للاعلان"
                android:textColor="@color/dark_white" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:background="@drawable/input_et_ads"
                        android:scaleType="fitXY"
                        android:src="@drawable/add_icon_grey_192x192" />

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:background="@drawable/input_et_ads"

                        android:scaleType="fitXY"
                        android:src="@drawable/add_icon_grey_192x192" />

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:background="@drawable/input_et_ads"
                        android:scaleType="fitXY"
                        android:src="@drawable/add_icon_grey_192x192" />
                </LinearLayout>
            </ScrollView>

            <EditText
                android:id="@+id/bandRkamEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/input_et_ads"
                android:fontFamily="@font/sub_title_font"
                android:hint="بند رقم "
                android:inputType="number"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/dark_white"
                android:textColorHint="@color/dark_white" />

            <EditText
                android:id="@+id/descreptionET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/input_et_ads"
                android:fontFamily="@font/sub_title_font"
                android:hint="التوصيف"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/dark_white"
                android:textColorHint="@color/dark_white" />

            <EditText
                android:id="@+id/priceEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/input_et_ads"
                android:fontFamily="@font/sub_title_font"
                android:hint="السعر"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/dark_white"
                android:textColorHint="@color/dark_white" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/input_et_ads"
                android:orientation="horizontal"
                android:padding="10dp">


                <RadioGroup
                    android:id="@+id/startMazadRG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:id="@+id/raf3aRB"
                        android:buttonTint="@color/dark_white"
                        android:text="رفعة"
                        android:textColor="@color/dark_white" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:id="@+id/Raf3aFreeRB"
                        android:buttonTint="@color/dark_white"
                        android:text="حرة و متروكة للمزايد"
                        android:textColor="@color/dark_white" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/Raf3aFreeLessThanRB"
                        android:buttonTint="@color/dark_white"
                        android:text="حرة ولا تقل عن"
                        android:textColor="@color/dark_white" />


                </RadioGroup>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:background="@color/dark_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/sub_title_font"
                    android:gravity="right|center"
                    android:text="بداية المزاد :"
                    android:textColor="@color/dark_white" />


            </LinearLayout>
            <EditText
                android:id="@+id/raf3aEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/input_et_ads"
                android:fontFamily="@font/sub_title_font"
                android:hint="ادخل المبلغ"
                android:gravity="center"
                android:visibility="gone"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/dark_white"
                android:textColorHint="@color/dark_white" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/input_et_ads"
                android:orientation="horizontal"
                android:padding="10dp">


                <RadioGroup
                    android:id="@+id/rgBackSaleAddAdsActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbYesBackSaleActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/dark_white"
                        android:text="نعم"
                        android:textColor="@color/dark_white" />
                    <!--                <View-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="1px"-->
                    <!--                    android:background="@color/dark_white"/>-->

                    <RadioButton
                        android:id="@+id/rbNoBackSaleActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/dark_white"
                        android:text="لا"
                        android:textColor="@color/dark_white" />


                </RadioGroup>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:background="@color/dark_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/sub_title_font"
                    android:gravity="right|center"
                    android:text="يحق الرجوع :"
                    android:textColor="@color/dark_white" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/input_et_ads"
                android:orientation="horizontal"
                android:padding="10dp">


                <RadioGroup
                    android:id="@+id/rgAdsLengthAddAdsActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbOneHourAdsLengthAddAdsActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:buttonTint="@color/dark_white"
                        android:text="بعد ساعة واحدة"
                        android:textColor="@color/dark_white" />

                    <RadioButton
                        android:id="@+id/rbOneDayAdsLengthAddAdsActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:buttonTint="@color/dark_white"
                        android:text="ينتهي اليوم"
                        android:textColor="@color/dark_white" />

                    <RadioButton
                        android:id="@+id/rbMoreDaysAdsLengthAddAdsActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/dark_white"
                        android:text="اكثر من يوم"
                        android:textColor="@color/dark_white" />


                </RadioGroup>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:background="@color/dark_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/sub_title_font"
                    android:gravity="right|center"
                    android:text="مده انتهاء الاعلان :"
                    android:textColor="@color/dark_white" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDateAddAdsActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/input_et_ads"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvEndDateAddAdsActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="6dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_calender_24dp"
                        android:gravity="right|center"
                        android:text="اختار تاريخ"
                        android:textColor="@color/dark_white" />


                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:background="@color/dark_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/sub_title_font"
                    android:gravity="right|center"
                    android:text="تاريخ انتهاء الاعلان :"
                    android:textColor="@color/dark_white" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/input_et_ads"
                android:orientation="horizontal"
                android:padding="10dp">


                <RadioGroup
                    android:id="@+id/rgAdsTimeAddAdsActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbTenAdsTimeAddAdsActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/dark_white"
                        android:text="العاشرة مساْءْ"
                        android:textColor="@color/dark_white" />
                    <!--                                <View-->
                    <!--                                    android:layout_width="match_parent"-->
                    <!--                                    android:layout_height="1px"-->
                    <!--                                    android:background="@color/dark_white"/>-->

                    <RadioButton
                        android:id="@+id/rbTwelveAdsTimeAddAdsActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/dark_white"
                        android:text="منتصف الليل"
                        android:textColor="@color/dark_white" />


                </RadioGroup>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:background="@color/dark_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/sub_title_font"
                    android:gravity="right|center"
                    android:text="ينتهى فى :"
                    android:textColor="@color/dark_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/input_et_ads"
                android:orientation="horizontal"
                android:padding="10dp">


                <RadioGroup
                    android:id="@+id/enterMazadRG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/yesEnterMazad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/dark_white"
                        android:text="نعم"
                        android:textColor="@color/dark_white" />

                    <RadioButton
                        android:id="@+id/noEnterMazad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/dark_white"
                        android:text="لا"
                        android:textColor="@color/dark_white" />


                </RadioGroup>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:background="@color/dark_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/sub_title_font"
                    android:gravity="center"
                    android:text="السماح بدخول المزاد في النصف ساعه الاخير :"
                    android:textColor="@color/dark_white" />
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dropDownRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                tools:listitem="@layout/add_ons_item" />

            <Button
                android:id="@+id/addBtnAddAdsActivity"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:background="@drawable/btn_radius"
                android:fontFamily="@font/description_font"
                android:text="اضافه"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>


    </ScrollView>

</FrameLayout>