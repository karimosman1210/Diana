<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shakosh"
    android:id="@+id/coorSignUp"
    tools:context=".gui.signup.SignUpActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C3000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/description_font"
                android:gravity="center"
                android:text="عمل حساب جديد"
                android:textColor="@color/dark_white"
                android:textSize="28sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/dark_white" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@android:drawable/ic_input_add" />

                <ImageView
                    android:id="@+id/Upload_user_image_add"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:padding="20dp"
                    android:src="@drawable/botted_border_edit_profile" />


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="50"
                    android:background="@drawable/input_et"
                    android:fontFamily="@font/sub_title_font"
                    android:hint="الاسم "
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/dark_white"
                    android:textColorHint="@color/dark_white" />
            </LinearLayout>

            <EditText
                android:id="@+id/nickName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/input_et"
                android:fontFamily="@font/sub_title_font"
                android:hint="الأسم المستعار"
                android:inputType="text"
                android:maxLines="1"
                android:nextFocusDown="@id/confirmPassTv"
                android:padding="10dp"
                android:textColor="@color/dark_white"
                android:textColorHint="@color/dark_white" />

            <EditText
                android:id="@+id/emailTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/input_et"
                android:ems="10"
                android:fontFamily="@font/sub_title_font"
                android:hint="البريد الألكتروني"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:nextFocusDown="@id/passwordTv"
                android:padding="10dp"
                android:textColor="@color/dark_white"
                android:textColorHint="@color/dark_white" />

            <EditText
                android:id="@+id/passwordTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/input_et"
                android:fontFamily="@font/sub_title_font"
                android:gravity="end"
                android:hint="كلمة المرور"
                android:inputType="textPassword"
                android:maxLines="1"
                android:nextFocusDown="@id/confirmPassTv"
                android:padding="10dp"
                android:textColor="@color/dark_white"
                android:textColorHint="@color/dark_white" />

            <EditText
                android:id="@+id/confirmPassTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/input_et"
                android:fontFamily="@font/sub_title_font"
                android:gravity="end"
                android:hint="تأكيد كلمة المرور"
                android:inputType="textPassword"
                android:maxLines="1"
                android:nextFocusDown="@id/phoneTv"
                android:padding="10dp"
                android:textColor="@color/dark_white"
                android:textColorHint="@color/dark_white" />

            <EditText
                android:id="@+id/phoneTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/input_et"
                android:fontFamily="@font/sub_title_font"
                android:gravity="end"
                android:hint="رقم الهاتف"
                android:inputType="phone"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/dark_white"
                android:textColorHint="@color/dark_white" />


            <TextView
                android:id="@+id/countryTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/input_et"
                android:fontFamily="@font/sub_title_font"
                android:gravity="center"
                android:hint="أختر الدولة"
                android:inputType="phone"
                android:maxLines="1"
                android:padding="10dp"
                android:drawableRight="@drawable/arrowdown"
                android:textColor="@color/dark_white"
                android:textColorHint="@color/dark_white" />




            <Button

                android:id="@+id/signUpBtn"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:background="@drawable/btn_radius"
                android:fontFamily="@font/description_font"
                android:text="التالي"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>